<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".views.results.PlaceInfoActivity">

    <!-- rute, address, description, date, -->

    <TextView
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:text="EDITA TU RUTA"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Edita el nombre de tu ruta..."
        android:id="@+id/routeNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="10dp"
            android:text="FECHA"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/dateInfoBtn"
            android:layout_margin="5dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/baseline_calendar_today_white_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:enabled="false"
            android:id="@+id/routeDateEt"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MM/dd/yy"
            android:layout_alignParentRight="true"
            android:inputType="date"/>

    </RelativeLayout>

    <EditText
        android:layout_marginTop="10dp"
        android:hint="Edita la direcci칩n de tu ruta..."
        android:id="@+id/routeAddressEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="10dp"
        android:hint="Edita la descripcion de tu ruta..."
        android:id="@+id/routeDescriptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:id="@+id/saveBtn"
        android:text="Guardar Edici칩n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Advertencia: Tus ruta ser치 actualizada una vez presionando el bot칩n guardar."
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>